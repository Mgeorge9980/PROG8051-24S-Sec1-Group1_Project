<Window x:Class="StudioManagement.AddStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Staff"  Width="800">
    <Grid Background="#2F465B" Margin="-814,-230,998,-306">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,26,0,0"  
                   FontSize="36" FontWeight="Bold" Foreground="White" Text="Add New Staff"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <Grid Margin="0,10">
                <TextBox Name="FirstNameTextBox" Height="50"  
                         FontSize="16" Padding="10" Background="White"  
                         Foreground="Black" BorderBrush="Transparent"  
                         BorderThickness="0"  
                         VerticalContentAlignment="Center"/>
                <TextBlock Name="FirstNamePlaceholder" Text="First Name"  
                           VerticalAlignment="Center"  
                           Foreground="Gray" Margin="15,0,0,0" 
                           IsHitTestVisible="False" FontSize="16"/>
            </Grid>

            <Grid Margin="0,10">
                <TextBox Name="LastNameTextBox" Height="50"  
                         FontSize="16" Padding="10" Background="White"  
                         Foreground="Black" BorderBrush="Transparent"  
                         BorderThickness="0"  
                         VerticalContentAlignment="Center"/>
                <TextBlock Name="LastNamePlaceholder" Text="Last Name"  
                           VerticalAlignment="Center"  
                           Foreground="Gray" Margin="15,0,0,0" 
                           IsHitTestVisible="False" FontSize="16"/>
            </Grid>

            <Grid Margin="0,10">
                <TextBox Name="PhoneNumberTextBox" Height="50"  
                         FontSize="16" Padding="10" Background="White"  
                         Foreground="Black" BorderBrush="Transparent"  
                         BorderThickness="0"  
                         VerticalContentAlignment="Center"/>
                <TextBlock Name="PhoneNumberPlaceholder" Text="Phone Number"  
                           VerticalAlignment="Center"  
                           Foreground="Gray" Margin="15,0,0,0" 
                           IsHitTestVisible="False" FontSize="16"/>
            </Grid>

            <Grid Margin="0,10">
                <TextBox Name="EmailTextBox" Height="50"  
                         FontSize="16" Padding="10" Background="White"  
                         Foreground="Black" BorderBrush="Transparent"  
                         BorderThickness="0"  
                         VerticalContentAlignment="Center"/>
                <TextBlock Name="EmailPlaceholder" Text="Email"  
                           VerticalAlignment="Center"  
                           Foreground="Gray" Margin="15,0,0,0" 
                           IsHitTestVisible="False" FontSize="16"/>
            </Grid>

            <Button Name="AddStaffButton" Content="Add Staff" Height="40" Margin="0,20"  
                    Background="#1899D6" Foreground="White" FontSize="16"  
                    Cursor="Hand" BorderBrush="Transparent" BorderThickness="0"  
                    Click="AddStaffButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
